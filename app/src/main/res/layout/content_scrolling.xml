<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.clinto.ida.ScrollingActivity"
    android:layout_weight="2"
    tools:showIn="@layout/activity_scrolling">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/cdv1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15dp"
                android:textColor="#8EB8C4"
                android:gravity="left"
                android:layout_marginLeft="25dp"
                android:textStyle="bold"
                android:text="hhhh"
                android:id="@+id/id"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="10dp"
                android:textColor="#A3A3A3"
                android:text="hhhhhhhhhhh"
                android:gravity="left"
                android:layout_marginLeft="25dp"
                android:id="@+id/address"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="-5dp"
                    android:src="@drawable/ic_action_phone_member"/>
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:text="234455555"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/phone"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_action_email_colour"/>
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:id="@+id/email"
                    android:layout_marginLeft="15dp"
                    android:text="eeeeeeeeee"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="left">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_action_call_custom"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"

                    android:id="@+id/phon"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:text="About Me"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textColor="#8EB8C4"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="Am working in ida as a doctor\nfamily are very strong\n we premote them\n\nAm working in ida as a doctor\nfamily are very strong\n we premote them\n\nAm working in ida as a doctor\nfamily are very strong\n we premote them\n\nAm working in ida as a doctor\nfamily are very strong\n we premote them\n\nAm working in ida as a doctor\nfamily are very strong\n we premote them\n\n"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.v4.widget.NestedScrollView>
